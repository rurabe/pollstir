<div class="row">
	<div class="span5">
		<%= question.prompt %>
	</div>
	<div class="span5">
		<table class="table table-striped span5">
			<th class="span2">
				Time
			</th>
			<th class="span3">
				Answer
			</th>
		<% question.answers.each do |answer| %>
			<tr>
				<td>
					<%= nice_time(answer.created_at) %>
				</td>
				<td>
					<%= answer.body %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
	<div class="span2">
		<% if @editable %>
			<%= link_to edit_poll_question_path(@poll,question) do %>
				<i class="icon-edit"></i>
			<% end %>

			<%= link_to poll_question_path(@poll,question), action: :destroy, method: :delete, data: { confirm: "Are you sure you want to delete this question?" } do %>
				<i class="icon-trash"></i>
			<% end %>
		<% end %>
	</div>
</div>