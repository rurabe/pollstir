<h1>Polls#index</h1>
<p>Find me in app/views/polls/index.html.erb</p>

<div>
<%= link_to "Make a new poll", new_poll_path %>
</div>

<% @polls.each do |poll| %>
	<div class="row">
		<div class="span3">
			<%= poll.created_at.localtime %>
		</div>
	
		<div>
			<%= link_to poll.title, poll_path(poll) %>
		</div>
	</div>
<% end %>
